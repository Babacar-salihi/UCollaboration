<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkWhite"
    tools:context=".UMaps.Activitys.Historique">

    <TextView
        android:id="@+id/titleHisto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titleHisto"
        android:textColor="@android:color/black"
        android:textSize="@dimen/texteSize35"
        android:textStyle="bold"
        android:fontFamily="@font/philosopherregular"
        android:layout_margin="@dimen/margin15"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/umaps_contener1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleHisto"
        android:layout_margin="@dimen/margin10"
        >

        <TextView
            android:id="@+id/umaps_histo_suppAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/supAll"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin10"
            android:layout_marginBottom="@dimen/margin15"
            android:padding="@dimen/padding7"
            android:onClick="suppAll"
            android:background="@android:color/holo_red_light"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/umaps_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/umaps_histo_suppAll"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/umaps_notHisto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zeroHisto"
        android:textStyle="bold"
        android:textSize="@dimen/texteSize30"
        android:fontFamily="@font/philosopherbold"
        android:textColor="@color/grey"
        android:layout_centerInParent="true"
        android:visibility="gone"/>



</RelativeLayout>