<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UInfos.Activitys.DetailsArticle"
    android:background="@color/darkWhite">

    <TextView
        android:id="@+id/uinfos_titre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/uinfo_details"
        android:textSize="@dimen/texteSize30"
        android:background="@color/appColor"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin10"
        android:layout_alignParentTop="true"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/uinfo_details_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imgSize200"
        app:cardCornerRadius="@dimen/radius10"
        android:layout_below="@id/uinfos_titre">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/uinfo_details_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/steve"
                />


            <TextView
                android:id="@+id/uinfo_details_titre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alaUne"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/textSize17"
                android:layout_margin="@dimen/margin10"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/uinfo_layout_descript"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/uinfo_details_card"
        android:layout_above="@id/uinfo_layout_openSite"
        android:padding="@dimen/padding10"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/uinfo_details_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textSize="@dimen/textSize17"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/uinfo_details_auteur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/uinfo_auteur"
            android:textSize="@dimen/textSize17"
            android:gravity="right"/>

        <TextView
            android:id="@+id/uinfo_details_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/datePub"
            android:textSize="@dimen/textSize17"
            android:gravity="right"/>

    </LinearLayout>

    <!-- Comment -->
    <RelativeLayout
        android:id="@+id/uinfo_layout_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin10"
        android:background="@drawable/style_input_email"
        android:layout_above="@id/uinfo_layout_openSite">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/uinfo_details_btn_publier"
            android:hint="@string/yourComment" />

        <TextView
            android:id="@+id/uinfo_details_btn_publier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PublierComment"
            android:textColor="@color/darkAppColor"
            android:textSize="@dimen/textSize17"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/uinfo_layout_openSite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/uinfo_btn_open_website"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/voirDetails"
            android:textSize="@dimen/texteSize20"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="@font/philosopherbold"
            android:background="@drawable/style_btns"
            android:layout_margin="@dimen/margin20"
            android:elevation="@dimen/elevation4"/>

    </LinearLayout>

</RelativeLayout>