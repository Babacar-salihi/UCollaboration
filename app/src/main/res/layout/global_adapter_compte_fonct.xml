<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/adapter_compte_cardView"
    android:elevation="@dimen/elevation8"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:padding="@dimen/padding5"
        >

        <ImageView
            android:id="@+id/adapter_compte_icon"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="@dimen/imgSize30"
            android:src="@drawable/ic_panier"
            />

        <TextView
            android:id="@+id/adapter_compte_titre"
            android:layout_width="0dp"
            android:layout_weight="70"
            android:layout_height="match_parent"
            android:text="@string/titleFonct"
            android:textSize="@dimen/textSize17"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin5"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>