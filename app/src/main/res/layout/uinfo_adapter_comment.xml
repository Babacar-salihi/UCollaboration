<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="@dimen/padding5"
    android:layout_marginBottom="@dimen/margin10"
    android:weightSum="100">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/uinfo_adapter_comment_pp_user"
        android:layout_width="@dimen/imgSize50"
        android:layout_height="@dimen/imgSize50"
        android:layout_marginRight="@dimen/margin5"
        android:src="@drawable/steve_jobs"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/uinfo_adapter_comment_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textComptePro"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/uinfo_adapter_comment_nom_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/userPrenom"
            android:textStyle="bold"
            android:layout_below="@id/uinfo_adapter_comment_comment"/>

        <TextView
            android:id="@+id/uinfo_adapter_comment_date_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/datePub"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:layout_below="@id/uinfo_adapter_comment_nom_user"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>