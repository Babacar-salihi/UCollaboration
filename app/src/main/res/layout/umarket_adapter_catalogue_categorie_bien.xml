<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin5"
    android:id="@+id/adapter_catalogue_categorie_cardView"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/radius10"
    app:cardElevation="@dimen/elevation4"
    >


    <LinearLayout
        android:layout_width="@dimen/widthSize150"
        android:layout_height="@dimen/widthSize70"
        android:gravity="center"
        android:background="@drawable/style_radius_cardview1"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/adapter_iconCateg"
            android:layout_width="@dimen/imgSize40"
            android:layout_height="@dimen/imgSize40"
            android:layout_gravity="center"
            android:src="@drawable/ic_panier" />

        <TextView
            android:id="@+id/adapter_titreCateg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/categorie"
            android:textColor="@android:color/black"
            android:textSize="@dimen/texteSize17"
            android:textStyle="italic"
            android:shadowRadius="10"
            android:shadowDx="5"
            android:shadowDy="3"
            android:shadowColor="@android:color/white"
            android:gravity="center"
            android:padding="@dimen/margin5"
            android:layout_gravity="center"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>