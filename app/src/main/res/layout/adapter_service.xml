<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardElevation="@dimen/elevation5"
    app:cardCornerRadius="@dimen/radius10"
    app:cardUseCompatPadding="true"
    android:layout_margin="@dimen/margin5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >


        <!-- Photo profil et nom -->
        <LinearLayout
            android:id="@+id/adapter_service_PP_Name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin20"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/adapter_service_profilPic"
                android:layout_width="@dimen/imgSize80"
                android:layout_height="@dimen/imgSize80"
                android:src="@drawable/steve_jobs"/>

            <TextView
                android:id="@+id/adapter_service_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/userName"/>

        </LinearLayout>

        <!-- Contact -->
        <RelativeLayout
            android:id="@+id/adapter_service_Contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding10"
            android:layout_margin="@dimen/margin10"
            android:layout_toRightOf="@id/adapter_service_PP_Name"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/adapter_service_metierName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enseignant"
                android:textSize="@dimen/texteSize35"
                android:textStyle="bold"
                android:fontFamily="@font/titre2"
                android:layout_marginBottom="@dimen/margin20"/>

            <!-- Numéro téléphone -->
            <TextView
                android:id="@+id/adapter_service_userTel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tel"
                android:textSize="@dimen/texteSize15"
                android:layout_below="@id/adapter_service_metierName"/>

            <!-- Email -->
            <TextView
                android:id="@+id/adapter_service_userEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/emailL"
                android:textSize="@dimen/texteSize15"
                android:layout_below="@id/adapter_service_userTel"
                />

            <!-- Adresse -->
            <TextView
                android:id="@+id/adapter_service_userAdr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/adresse"
                android:textSize="@dimen/texteSize15"
                android:layout_below="@id/adapter_service_userEmail"
                />

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>