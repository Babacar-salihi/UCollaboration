<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding10"
    tools:context=".UInfos.Activitys.Uinfo_Accueil"
    android:background="@color/darkWhite">

    <TextView
        android:id="@+id/uinfos_titre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/uinfo_titre"
        android:textSize="@dimen/texteSize30"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:fontFamily="@font/philosopherregular"
        android:gravity="center"
        android:layout_margin="@dimen/margin10"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/uinfos_recycleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/uinfos_titre"
        />

</RelativeLayout>