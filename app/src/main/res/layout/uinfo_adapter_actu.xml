<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:id="@+id/uinfo_adapter_acceuil_card"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="@dimen/padding5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/uinfo_adapter_acceuil_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/imgSize200"
                android:src="@drawable/steve_jobs"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/padding7">

                <!-- Titre info -->
                <TextView
                    android:id="@+id/uinfo_adapter_acceuil_titre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/titre"
                    android:textSize="@dimen/texteSize20"
                    android:textColor="@color/darkAppColor"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/margin5"
                    />

                <!-- Description info -->
                <TextView
                    android:id="@+id/uinfo_adapter_acceuil_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:textSize="@dimen/texteSize15"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="@dimen/margin5"
                    />

                <!-- Auteur info -->
                <TextView
                    android:id="@+id/uinfo_adapter_acceuil_auteur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/uinfo_auteur"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/margin5"
                    />

                <!-- Date info -->
                <TextView
                    android:id="@+id/uinfo_adapter_acceuil_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dateVente"
                    android:layout_gravity="right"
                    />

                <!-- Autres boutons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/margin5"
                    android:background="@drawable/cadre_simple"
                    android:padding="@dimen/padding2"
                    >

                    <!-- Liker -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin5"
                        android:clickable="true"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/margin5"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="@dimen/imgSize24"
                                android:layout_height="@dimen/imgSize24">

                                <ImageView
                                    android:layout_width="@dimen/imgSize24"
                                    android:layout_height="@dimen/imgSize24"
                                    android:src="@drawable/ic_favorite"/>

                                <ImageView
                                    android:layout_width="@dimen/imgSize24"
                                    android:layout_height="@dimen/imgSize24"
                                    android:src="@drawable/ic_favorite_true"
                                    android:visibility="gone"/>

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/uinfo_adapter_acceuil_nbLike"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/nombre"
                                android:gravity="center"
                                />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Commentaire -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin5"
                        android:clickable="true"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/margin5"
                            >

                            <ImageView
                                android:layout_width="@dimen/imgSize24"
                                android:layout_height="@dimen/imgSize24"
                                android:src="@drawable/ic_comment"/>

                            <TextView
                                android:id="@+id/uinfo_adapter_acceuil_nbComment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/nombre"
                                android:gravity="center"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>