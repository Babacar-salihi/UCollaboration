<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkWhite"
    tools:context=".Globals.Activitys.EmailVerification">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/valider"
        android:textStyle="bold"
        android:textSize="@dimen/texteSize20"
        android:fontFamily="@font/logo"
        android:layout_margin="@dimen/margin15"
        />

    <!-- Bouton verificqtion compte Gmail -->
    <androidx.cardview.widget.CardView
        android:id="@+id/verification_cardview_gmail"
        android:layout_width="@dimen/widthSize200"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin20"
        app:cardCornerRadius="@dimen/radius100"
        android:layout_centerInParent="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/style_btn_gmail"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/imgSize50"
                android:layout_height="@dimen/imgSize50"
                android:src="@drawable/google"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/gmail"
                android:textSize="@dimen/texteSize25"
                android:layout_marginLeft="@dimen/margin20"
                android:textStyle="bold"

                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bouton verificqtion compte Yahoo -->
    <androidx.cardview.widget.CardView
        android:id="@+id/verification_cardview_yahoo"
        android:layout_width="@dimen/widthSize200"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin20"
        app:cardCornerRadius="@dimen/radius100"
        android:layout_centerInParent="true"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/style_btn_gmail"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/imgSize50"
                android:layout_height="@dimen/imgSize50"
                android:src="@drawable/yahoo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/yahoo"
                android:textSize="@dimen/texteSize25"
                android:layout_marginLeft="@dimen/margin20"
                android:textStyle="bold"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="@dimen/imgSize110"
        android:layout_height="@dimen/imgSize110"
        android:layout_below="@id/verification_cardview_gmail"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="-80dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/index"
        android:elevation="@dimen/elevation100"/>


    <TextView
        android:id="@+id/verification_btnPasser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/passer"
        android:textSize="@dimen/textSize17"
        android:layout_marginLeft="@dimen/margin20"
        android:textStyle="italic"
        android:textColor="@color/appColor"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/margin10"
        android:fontFamily="@font/philosopherregular"
        />

</RelativeLayout>