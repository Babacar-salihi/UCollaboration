<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/adapter_livreur_Card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/margin10"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/radius5"
    android:elevation="@dimen/elevation4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:padding="@dimen/padding2"
        android:orientation="vertical">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/adapter_livreur_profil"
            android:layout_width="@dimen/imgSize90"
            android:layout_height="@dimen/imgSize90"
            android:src="@drawable/usericon"
            />

        <TextView
            android:id="@+id/adapter_livreur_nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/userName"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:padding="@dimen/padding2"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/darkAppColor"/>

    </LinearLayout>



</androidx.cardview.widget.CardView>